<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<style>
.feature_product_slider {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.feature_product_slider .container {
  max-width: 100%;
  overflow: hidden;
}
.feature_product_slider h2 {
  font-size: 44px;
  font-weight: 700;
  color: red;
  line-height: normal;
  text-align: center;
  text-transform: uppercase;
  margin: 0;
}
.feature_product_slider .slider_inner  {
  padding: 0 20%;
}
.feature_product_slider .swiper-slide {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.7s ease-in-out;
  background-color: green;
}
.feature_product_slider .swiper-slide-active {
  transition: all 0.7s ease-in-out;
  background-color: blue;
}
.feature_product_slider .swiper-button-prev:after, 
.feature_product_slider .swiper-button-next:after {
  display: none;
}
.feature_product_slider .slider_arrows {
  padding-top: 4em;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 70px;
}
.feature_product_slider .swiper-pagination,
.feature_product_slider .swiper-button-next, 
.feature_product_slider .swiper-button-prev {
  position: unset;
  width: fit-content;
  margin: 0 !important;
}
.feature_product_slider .swiper-button-next, 
.feature_product_slider .swiper-button-prev {
  width: 20px;
  height: 30px;
}
.feature_product_slider .swiper-button-prev {
  transform: rotate(180deg);
}
.feature_product_slider .swiper-pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.feature_product_slider .swiper-pagination-bullet {
  width: 1em;
  height: 1em;
  background-color: #000;
  border-radius: 50%;
  margin: 0 5px;
  cursor: pointer;
  opacity: 0.43;
}
.feature_product_slider .swiper-pagination-bullet-active {
  background-color: #000;
  opacity: 1;
}
</style>
{%- style -%}
#feature_product_slider-{{ section.id }} {
  background-color:{{ section.settings.bg_color }};
  padding-top:{{ section.settings.desktop_padding_top }}px;
  padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
  margin-top:{{ section.settings.desktop_margin_top }}px;
  margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
}
@media screen and (max-width: 991px) { 
  #feature_product_slider-{{ section.id }} { 
    padding-top:{{ section.settings.mbl_padding_top }}px;
    padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
    margin-top:{{ section.settings.mbl_margin_top }}px;
    margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
  }
}
{%- endstyle -%}

<section class="feature_product_slider" id="feature_product_slider-{{ section.id }}">
  <div class="container">
      <div class="slider_inner">
        <div class="swiper-wrapper"> 
          {% for block in section.blocks %}
            <div class="slide_col swiper-slide">
              <h2>{{ block.settings.heading }}</h2>
            </div>
          {% endfor %} 
        </div>
      </div>
      <div class="slider_arrows">
        <div class="swiper-button-next">
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="20" viewBox="0 0 12 18" fill="none">
            <path d="M11 1L1 9L11 17" stroke="#454545"/>
          </svg>
        </div>
      <div class="swiper-pagination"></div>
        <div class="swiper-button-prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="20" viewBox="0 0 12 18" fill="none">
            <path d="M11 1L1 9L11 17" stroke="#454545"/>
          </svg>
        </div> 
      </div> 
  </div> 
</section> 
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
const swiper = new Swiper('.feature_product_slider .slider_inner', {
  centeredSlides: true,
  loop: true,
  speed: 500,
  slidesPerView: '1',
  grabCusor: true,
  resistanse: false,
  speed: 6000,
  spaceBetween: 20,
  autoplay: false,
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
  pagination: {
    el: '.swiper-pagination', // Link to your custom pagination element
    clickable: true, // Makes the bullets clickable
    bulletClass: 'swiper-pagination-bullet', // Custom bullet class
    bulletActiveClass: 'swiper-pagination-bullet-active', // Custom active bullet class
  },
});
</script>
