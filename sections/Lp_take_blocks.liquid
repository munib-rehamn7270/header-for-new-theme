<style>
.lp_blocks {
  width: 100%;
  height: auto;
}
.lp_blocks .container {
  max-width: 1160px;
  padding: 0 24px;
  margin: 0 auto;
}
.lp_blocks h2 {
  font-family: "Georama", sans-serif;
  font-size: 40px;
  font-weight: 600;
  line-height: 48px;
  padding-bottom: 40px; 
  margin: 0;
}
.lp_blocks .block_inner {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  row-gap: 40px;
  flex-wrap: wrap;
}
.lp_blocks .block_col {
  width: calc(50% - 12px);
}
.lp_blocks .icon_image {
  width: 50px;
  height: 50px;
  margin-bottom: 16px;
}
.lp_blocks .icon_image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.lp_blocks h3 {
  font-family: "Georama", sans-serif;
  font-size: 24px;
  font-weight: 600;
  line-height: 28.8px;
  padding-bottom: 8px; 
  margin: 0;
}  
.lp_blocks div.desc,
.lp_blocks div.desc p {
  font-family: "Roboto", sans-serif;
  font-size: 20px;
  font-weight: 300;
  line-height: 24px;
  margin: 0;
}
.lp_blocks div.desc strong {
  font-weight: 700;
}
@media screen and (max-width: 991px) {
  .lp_blocks h2 {
    font-size: 34px;
    line-height: 40px;
    padding-bottom: 30px;
  }
  .lp_blocks .block_inner {
    row-gap: 24px;
  }
  .lp_blocks .icon_image {
    width: 40px;
    height: 40px;
  }
  .lp_blocks h3 {
    font-size: 22px;
    line-height: 26.8px;
  }
  .lp_blocks div.desc, 
  .lp_blocks div.desc p {
    font-size: 18px;
    line-height: 21px;
  }
}
@media screen and (max-width: 767px) {
  .lp_blocks h2 {
    font-size: 28px;
    line-height: 33px;
  }
  .lp_blocks .block_inner {
    flex-direction: column;
  }
  .lp_blocks .block_col {
    width: 100%;
  }
}
</style>
{% style %}
  #lp_blocks-{{ section.id }} h2,
  #lp_blocks-{{ section.id }} h3,
  #lp_blocks-{{ section.id }} div.desc {
    color:{{ section.settings.font_color }};
  }
  #lp_blocks-{{ section.id }} {
    background-color:{{ section.settings.bg_color }};
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    margin-top:{{ section.settings.desktop_margin_top }}px;
    margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
  }
  @media screen and (max-width: 991px) { 
    #lp_blocks-{{ section.id }} {
      padding-top:{{ section.settings.mbl_padding_top }}px;
      padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
      margin-top:{{ section.settings.mbl_margin_top }}px;
      margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
    }
  }
{% endstyle %}

<section class="lp_blocks" id="lp_blocks-{{ section.id }}">
  <div class="container">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      <div class="block_inner">
        {% for block in section.blocks %} 
          <div class="block_col">
            {% if block.settings.icon_img != blank %}
              <div class="icon_image">
                  {{ block.settings.icon_img | image_url: width: block.settings.icon_img.width| image_tag: loading: 'lazy'}}
              </div>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h3>{{ block.settings.heading }}</h3>
            {% endif %}
            {% if block.settings.desc != blank %}
              <div class="desc">{{ block.settings.desc }}</div>
            {% endif %}
          </div>  
        {% endfor %}
      </div>
  </div>
</section>

{% schema %}
{
  "name": "LP Blocks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "When should I take Lactéol® diarrhEaseTM?"
    },
    {
      "type":"header",
      "content":"Section Color Setting"
    }, 
