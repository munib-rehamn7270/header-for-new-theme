    {
      "type": "range",
      "id": "desktop_margin_top",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_margin_bottom",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Mobile Spacing"
    },
    {
      "type": "range",
      "id": "mbl_padding_top",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mbl_padding_bottom",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "mbl_margin_top",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mbl_margin_bottom",
      "min": 0,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    }
  ],
  "blocks":[
    {
      "type":"block",
      "name":"Block",
      "settings":[
          {
            "type": "image_picker",
            "id": "icon_img",
            "label": "Icon Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "During occasional digestive upsets*"
          },
          {
            "type": "richtext", 
            "id": "desc", 
            "label": "Description",
            "default": "<p>Lactobacillus LB naturally strengthens and reinforces the good bacteria in the digestive tract*</p>"
          },
      ]
    }
   ],
  "presets": [
    {
      "name": "LP Blocks"
    }
  ]
}
{% endschema %}