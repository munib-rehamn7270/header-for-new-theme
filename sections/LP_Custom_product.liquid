          {% endif %}
        </div>
        <div class="product_content"> 
         {% comment %}  <span class="product_desc">{{ pro.sub_title | metafield_tag }}</span>
            <div class="desc">{{ pro.desc | metafield_tag }}</div> {% endcomment %}
          {% if section.settings.product_subhead != blank %}
            <span class="product_desc">{{ section.settings.product_subhead }}</span>
          {% endif %}
          {% if section.settings.product_desc != blank %}
            <div class="desc">{{ section.settings.product_desc }}</div>
          {% endif %}
        </div>
  </div>
