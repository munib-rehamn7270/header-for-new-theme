<style>
.lp_custom_product {
  width: 100%;
  height: auto;
  position: relative;
  overflow: hidden;
}
.lp_custom_product::before {
  content: '';
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 51%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  background-image: url('{{ section.settings.desktop_img | img_url: 'master' }}');
}
.lp_custom_product::after {
  content: '';
  width: 314px;
  height: 782px;
  background-repeat: no-repeat;
  background-size: cover;
  display: block;
  position: absolute;
  top: 45px;
  left: 0;
  z-index: 0;
  background-image: url('{{ section.settings.fl_image | img_url: 'master' }}');
}
.lp_custom_product .container {
  max-width: 1160px;
  padding: 0 24px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}
.lp_custom_product .product_wrapper {
  max-width: 613px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto 140px;
}
.lp_custom_product .product_image {
  max-width: 570px;
  width: 100%;
  margin-bottom: -28px;
}
.lp_custom_product img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.lp_custom_product h5 {
  text-align: center;
  font-family: "Roboto", sans-serif;
  font-size: 12px;
  font-weight: 300;
  line-height: 120%; 
  padding-bottom: 30px;
  margin: 0;
}
.lp_custom_product h3 {
  padding-bottom: 20px;
} 
.lp_custom_product h3,
.lp_custom_product h3 p {
  margin: 0;
  text-align: center;
  font-family: "Georama", sans-serif;
  font-size: 44px;
  font-weight: 700;
  line-height: 52px;
  max-width: 490px;
}
.lp_custom_product .product_content {
  max-width: 920px;
}
.lp_custom_product span.product_desc {
  padding-bottom: 40px;
  display: block;
}
.lp_custom_product span.product_desc,
.lp_custom_product span.product_desc p {
  font-family: "Georama", sans-serif;
  font-size: 40px;
  font-weight: 600 !important;
  line-height: 48px;
  margin: 0;
}
.lp_custom_product div.desc,
.lp_custom_product div.desc p {
  font-family: "Roboto", sans-serif;
  font-size: 24px;
  font-weight: 300;
  line-height: 32px;
  margin: 0;
}
.lp_custom_product a.shop_btn.btn {
  border-radius: 100px;
  background: var(--Blue, #19A7E0);
  display: flex;
  padding: 12px 20px;
  justify-content: center;
  align-items: center;
  gap: 10px;
  color: var(--White, #FFF);
  text-align: center;
  font-family: "Roboto", sans-serif;
  font-size: 14px;
  font-weight: 600;
  line-height: normal;
  text-transform: uppercase;
  text-decoration: none;
  max-width: 200px;
  width: 100%;
}
@media screen and (max-width: 1199px) {
.lp_custom_product::after {
  width: 280px;
  height: 600px;
  background-size: contain;
  top: 150px;
}
.lp_custom_product::before {
  background-size: 100% 53%;
}
.lp_custom_product .product_wrapper {
  margin: 0 auto 100px;
}
}
@media screen and (max-width: 991px) {
.lp_custom_product::before {
  background-size: 100% 55%;
}
.lp_custom_product .product_wrapper {
  margin: 0 auto 90px;
}
.lp_custom_product::after {
  display: none;
}
.lp_custom_product h3, 
.lp_custom_product h3 p {
  font-size: 35px;
  line-height: 42px;
  max-width: 430px;
}
.lp_custom_product span.product_desc, 
.lp_custom_product span.product_desc p {
  font-size: 35px;
  line-height: 42px;
}
.lp_custom_product  span.product_desc {
  padding-bottom: 30px;
}
.lp_custom_product div.desc, 
.lp_custom_product div.desc p {
  font-size: 18px;
  line-height: 27px;
}
}
@media screen and (max-width: 767px) {
  .lp_custom_product .product_image {
    margin-bottom: -12px;
    width: 400px;
  }
  .lp_custom_product::before {
    background-size: 100% 36%;
    background-image: url('{{ section.settings.mobile_img | img_url: 'master' }}');
  }
  .lp_custom_product span.product_desc, 
  .lp_custom_product span.product_desc p {
    font-size: 28px;
    line-height: 34px;
  }
}
</style>
{% style %}
  #lp_custom_product-{{ section.id }} h3,
  #lp_custom_product-{{ section.id }} h3 p,
  #lp_custom_product-{{ section.id }} h5,
  #lp_custom_product-{{ section.id }} dev.desc,
  #lp_custom_product-{{ section.id }} div.desc p {
    color:{{ section.settings.primary_color }};
  }
  #lp_custom_product-{{ section.id }} h3 p strong,
  #lp_custom_product-{{ section.id }}  span.product_desc,
  #lp_custom_product-{{ section.id }} span.product_desc p {
    color:{{ section.settings.secondary_color }};
  }
  #lp_custom_product-{{ section.id }} {
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    margin-top:{{ section.settings.desktop_margin_top }}px;
    margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
  }
  @media screen and (max-width: 991px) { 
    #lp_custom_product-{{ section.id }} {
      padding-top:{{ section.settings.mbl_padding_top }}px;
      padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
      margin-top:{{ section.settings.mbl_margin_top }}px;
      margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
    }
  }
{% endstyle %}

<section class="lp_custom_product" id="lp_custom_product-{{ section.id }}">
  <div class="container">
        <div class="product_wrapper">
          {% if section.settings.product_img != blank %}
            <div class="product_image">
              {% comment %} {{ product.images[0] | img_url: '1024x1024' | img_tag }} {% endcomment %}
               {{ section.settings.product_img | image_url: width: section.settings.product_img.width| image_tag: loading: 'lazy'}}
            </div>
          {% endif %}
        {% comment %}  {% assign pro = product.metafields.custom.product_content.value %} {% endcomment %}
          <h5>{{ section.settings.suitable_text }}</h5>
