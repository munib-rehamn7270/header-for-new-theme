<style>
.hh_discover_blog {
  width: 100%;
  height: auto;
}
.hh_discover_blog .container {
  max-width: 1690px;
  margin: 0 auto;
  padding: 0 40px;
}
.hh_discover_blog .section_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
  padding-bottom: 50px;
}
.hh_discover_blog h2 { 
  font-family: Inter; 
  font-size: 48px;
  font-weight: 800;
  line-height: 54px;
  letter-spacing: 1.68px;
  margin: 0;
}
.hh_discover_blog .shop_btn {
  border-radius: 27px;
  border: 2px solid #163029;
  background: #FFF;
  color: #163029;
  text-align: center;
  font-family: Inter;
  font-size: 14px;
  font-weight: 700;
  line-height: 105%;
  letter-spacing: 2.24px;
  display: block;
  padding: 15px 22px;
  text-decoration: none;
  transition: 0.4s ease-in-out;
}
.hh_discover_blog .shop_btn:hover {
  color: #fff;
  background: #163029;
}
</style>
{% style %}
  {% for block in section.blocks %} 
    #collection_image-{{ block.id }} path {
      stroke:{{ block.settings.svg_color }};
    }
  {% endfor %}
  #hh_discover_blog-{{ section.id }} h2 { 
    color:{{ section.settings.heading_color }};
  }
  #hh_discover_blog-{{ section.id }} {
    background-color: {{ section.settings.bg_color }}; 
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    margin-top:{{ section.settings.desktop_margin_top }}px;
    margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
  }
  @media screen and (max-width: 991px) { 
    #hh_discover_blog-{{ section.id }} {
      padding-top:{{ section.settings.mbl_padding_top }}px;
      padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
      margin-top:{{ section.settings.mbl_margin_top }}px;
      margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
    }
  }
{% endstyle %}

<section class="hh_discover_blog" id="hh_discover_blog-{{ section.id }}">
  <div class="container">
    <div class="section_header">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_url }}" class="shop_btn">{{ section.settings.btn_text }}</a>
      {% endif %}
    </div> 
    <div class="blogs_inner">
      {% for block in section.blocks %} 
        {%  case.type %} 
            {% when 'left_block' %}
                <div class="left_col">
                </div>
            {% when 'right_block' %}
                <div class="right_col">
                </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
              
